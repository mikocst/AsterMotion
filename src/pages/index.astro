---
import '../styles/global.css';
import {Button} from '@components/index.ts';
import { buttonCopy, buttonVariant } from '@types';

const heroCopy = {
	copy: "Aster.motion is an open source web component library. Copy, paste, and edit the components or the design system for your own web projects. Design and coded by Miko.CST."
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>AsterMotion</title>
	</head>
	<body>
        <main>
            <div class = "flex flex-col items-start justify-start px-16 py-8">
                <h1 class="text-4xl text-primary font-bold">Welcome to AsterMotion</h1>
				<p class = "max-w-[70ch]">{heroCopy.copy}</p>
                <Button
					buttonCopy= {buttonCopy.CLICK_ME}
					variant={buttonVariant.Primary}
					client:load
				/>
            </div>
		</main>

